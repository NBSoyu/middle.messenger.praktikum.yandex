{{!< absolute}}
<div class="app">
  <div class="auth">
    <form>
      <div class="auth--container">
        <div class="auth--header">
          <h1>Регистрация</h1>
        </div>
        <div class="auth--content">
          <div class="action--input">
            <div class="action--input__container">
              <label class="action--input--placeholder">Почта</label>
              <input type="text" name="email" />
            </div>
          </div>
          <div class="action--input">
            <div class="action--input__container">
              <label class="action--input--placeholder">Логин</label>
              <input type="text" name="login" />
            </div>
          </div>
          <div class="action--input">
            <div class="action--input__container">
              <label class="action--input--placeholder">Имя</label>
              <input type="text" name="first_name" />
            </div>
          </div>
          <div class="action--input">
            <div class="action--input__container">
              <label class="action--input--placeholder">Фамилия</label>
              <input type="text" name="second_name" />
            </div>
          </div>
          <div class="action--input">
            <div class="action--input__container">
              <label class="action--input--placeholder">Телефон</label>
              <input type="text" name="phone" />
            </div>
          </div>
          <div class="action--input password">
            <div class="action--input__container">
              <label class="action--input--placeholder">Пароль</label>
              <input type="password" name="password" />
            </div>
          </div>
          <div class="action--input password error">
            <div class="action--input__container">
              <label class="action--input--placeholder">Повторите пароль</label>
              <input type="password" name="password-again" />
            </div>
          </div>
        </div>
        <div class="auth--footer">
          <button class="auth--button primary" type="submit">
            Зарегистрироваться
          </button>
          <button class="auth--button secondary" type="submit">Войти</button>
        </div>
      </div>
    </form>
  </div>
</div>
